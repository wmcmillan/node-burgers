<main class="container">
  <header class="row" <h1>Burger</h1>

    <h2>Eat a Burger</h2>

    <h2>Uneaten Burgers</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{burger_name}}
        <button class="devour btn-sm btn btn-success" data-id="{{id}}">DEVOUR IT!</button>
      </li>
      {{/unless}}
      {{/each}}
    </ul>

    <h2>Eaten Burgers</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        {{burger_name}}
      </li>
      {{/if}}
      {{/each}}
    </ul>

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
</main>