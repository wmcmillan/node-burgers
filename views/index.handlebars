<main class="container">
  <header class="row" <h1>Burger</h1>

    <h2>Eat a Burger</h2>

    <h2>Uneaten Burgers</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{name}}
        <button class="change-eat btn-sm btn btn-success" data-id="{{id}}">Eat It</button>
      </li>
      {{/unless}}
      {{/each}}
    </ul>

    <h2>Eaten Burgers</h2>
    <ul>
      {{#each burgers}}
      {{#if eaten}}
      <li>
        {{name}}
      </li>
      {{/if}}
      {{/each}}
    </ul>

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burger-name" name="name">
      </div>

      <div class="form-group">
        <label for="eaten">Hungry?</label><br>
        <input type="radio" name="eaten" value="1" checked> Hungry!<br>
        <input type="radio" name="eaten" value="0"> Full
      </div>

      <button type="submit">Add Burger</button>
    </form>
</main>